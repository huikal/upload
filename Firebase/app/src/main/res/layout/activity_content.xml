<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/store_image"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/store_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/store_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Email Address" />

    <LinearLayout
        android:id="@+id/blog_content_view"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/store_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/blog_content_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    tools:text="Content Title" />

                <TextView
                    android:id="@+id/blog_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    tools:text="Content Body" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- 지역 -->
    <TextView
        android:id="@+id/store_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/store_email"
        app:layout_constraintLeft_toLeftOf="@id/store_email"
        android:paddingTop="3dp"
        tools:text="Region" />

    <!-- 카테고리 -->
    <TextView
        android:id="@+id/store_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/store_email"
        app:layout_constraintLeft_toRightOf="@id/store_region"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        tools:text="Category" />




    <!-- 가격 -->
    <TextView
        android:id="@+id/store_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/buy_button"
        app:layout_constraintRight_toLeftOf="@id/buy_button"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        tools:text="Price" />

    <!-- 배송 -->
    <TextView
        android:id="@+id/store_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/store_price"
        app:layout_constraintRight_toRightOf="@id/store_price"
        tools:text="deliv" />

    <!-- 삭제 -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:src="@drawable/ic_trashcan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:backgroundTint="#B0B0B0"
        app:layout_constraintTop_toTopOf="@id/store_email"
        app:layout_constraintRight_toRightOf="@id/blog_content_view"
        />

    <!-- 상세 -->
    <TextView
        android:id="@+id/store_meet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/more_button"
        tools:text="Meet" />

    <Button
        android:id="@+id/more_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기사 연결"
        android:backgroundTint="#B0B0B0"
        app:layout_constraintBottom_toTopOf="@id/buy_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <Button
        android:id="@+id/buy_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="구매하기"
        android:backgroundTint="#B0B0"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
