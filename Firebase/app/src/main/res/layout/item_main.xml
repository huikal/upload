<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_data"
    >
    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/itemActivityView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/itemImageView"
        app:layout_constraintTop_toTopOf="@id/itemImageView"
        />
    <TextView
        android:id="@+id/itemContentView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemActivityView"
        app:layout_constraintLeft_toRightOf="@id/itemImageView"
        />
    <TextView
        android:id="@+id/itemEmailView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemContentView"
        app:layout_constraintLeft_toRightOf="@id/itemImageView"
        />
    <TextView
        android:id="@+id/itemDateView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemEmailView"
        app:layout_constraintLeft_toRightOf="@id/itemImageView"
        />
    <TextView
        android:id="@+id/itemArticleView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemDateView"
        app:layout_constraintLeft_toRightOf="@id/itemImageView"
        />
    <ImageButton
        android:id="@+id/deleteButton"
        android:src="@drawable/ic_trashcan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/def"
        app:layout_constraintRight_toRightOf="@id/def"
        />


    <TextView
        android:id="@+id/def"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/itemImageView"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
